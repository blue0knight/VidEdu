<p id="notice"><%= notice %></p>

<div class="row">

<div class="col s3">
  <div class="collection">
    <% @videos.each do |video| %>
          <%= link_to video.title, video, :class => 'collection-item' %>
          <% end %>
  </div>
</div>
<div class="col s9">
  <div class="card blue-grey darken-1">
    <center><iframe width="640" height="480" src="https://www.youtube-nocookie.com/embed/w12Rqz-weiM" frameborder="0" allowfullscreen></iframe></center>
            <div class="card-content white-text">
              <span class="card-title"><%= @video.title %></span>
              <p><%= @video.description %></p>
            </div>
            <div class="card-action">
              <a href="#">Previous</a>
              <%= link_to "Previous", @prev_video if !@prev_video.nil? %>
              <span class="right">
              <a href="#">Next</a>
              <%= link_to "Next", @prev_next if !@next_video.nil? %>
            </span>
            </div>
  </div>
<div>


</div>
